{% block heidel_payment_detail %}
    <sw-card class="unzer-payment-detail" :title="$tc('unzer-payment.paymentDetails.detail.cardTitle')">
        {% block heidel_payment_detail_container %}
            <sw-container columns="1fr 1fr 1fr" gap="0 20px">
                {% block heidel_payment_detail_container_left %}
                    <sw-container>
                        <sw-description-list>
                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.amountTotal') }}</dt>
                            <dd>{{ paymentResource.basket.amountTotalGross | currency(paymentResource.currency) }}</dd>

                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.amountTotalVat') }}</dt>
                            <dd>{{ paymentResource.basket.amountTotalVat | currency(paymentResource.currency) }}</dd>

                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.currency') }}</dt>
                            <dd>{{ paymentResource.currency }}</dd>

                            {% block heidel_payment_detail_container_left_inner %}{% endblock %}
                        </sw-description-list>
                    </sw-container>
                {% endblock %}

                {% block heidel_payment_detail_container_center %}
                    <sw-container>
                        <sw-description-list>
                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.amountRemaining') }}</dt>
                            <dd>{{ paymentResource.amount.remaining | currency(paymentResource.currency) }}</dd>

                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.amountCancelled') }}</dt>
                            <dd>{{ paymentResource.amount.canceled | currency(paymentResource.currency) }}</dd>

                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.amountCharged') }}</dt>
                            <dd>{{ paymentResource.amount.charged | currency(paymentResource.currency) }}</dd>

                            {% block heidel_payment_detail_container_center_inner %}{% endblock %}
                        </sw-description-list>
                    </sw-container>
                {% endblock %}

                {% block heidel_payment_detail_container_right %}
                    <sw-container>
                        <sw-description-list>
                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.shortId') }}</dt>
                            <dd>{{ paymentResource.shortId }}</dd>

                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.id') }}</dt>
                            <dd>{{ paymentResource.id }}</dd>

                            <dt>{{ $tc('unzer-payment.paymentDetails.detail.state') }}</dt>
                            <dd>{{ paymentResource.state.name }}</dd>

                            {% block heidel_payment_detail_container_right_inner %}{% endblock %}
                        </sw-description-list>
                    </sw-container>
                {% endblock %}
            </sw-container>
        {% endblock %}

        {% block heidel_payment_detail_ship_button %}
            <sw-container v-if="paymentResource.isGuaranteed" columns="1fr" justify="left">
                <sw-button-process :isLoading="isLoading" :processSuccess="isSuccessful" @click="ship">
                    {{ $tc('unzer-payment.paymentDetails.actions.shipButton') }}
                </sw-button-process>
            </sw-container>
        {% endblock %}
    </sw-card>
{% endblock %}
